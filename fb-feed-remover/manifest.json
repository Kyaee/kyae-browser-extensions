{
  "manifest_version": 3,
  "name": "FB Focus Mode",
  "version": "1.1",
  "permissions": ["storage", "activeTab", "scripting"],
  "action": {
    "default_popup": "index.html"
  },
  "content_scripts": [
    {
      "matches": ["https://www.facebook.com/*"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ]
}